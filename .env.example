# Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# Your deployed TipJar contract address on Base Mainnet
NEXT_PUBLIC_TIPJAR_ADDRESS_MAINNET=

# Your deployed TipJar contract address on Base Sepolia (for testing)
NEXT_PUBLIC_TIPJAR_ADDRESS_TESTNET=

# Your app's public URL (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# WALLET CONNECTION
# =============================================================================

# WalletConnect Project ID - get one at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Private key for contract deployment (DO NOT COMMIT!)
DEPLOYER_PRIVATE_KEY=

# Protocol fee recipient address (receives 2% of all tips)
PROTOCOL_FEE_RECIPIENT=

# Base RPC URLs (defaults work, but you can use Alchemy/Infura for better reliability)
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Basescan API key for contract verification
BASESCAN_API_KEY=

# =============================================================================
# FARCASTER / NEYNAR
# =============================================================================

# Neynar API key for fetching Farcaster user profiles
# Get one at https://neynar.com
NEYNAR_API_KEY=

# =============================================================================
# INDEXER
# =============================================================================

# Path to SQLite database file
DATABASE_PATH=./data/tips.db

# Use testnet for indexer (set to 'true' for Base Sepolia)
USE_TESTNET=false

# Contract address for indexer (same as above, but without NEXT_PUBLIC prefix)
TIPJAR_ADDRESS=

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Use testnet in the frontend
NEXT_PUBLIC_USE_TESTNET=false
